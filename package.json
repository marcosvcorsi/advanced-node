{
  "name": "advanced-node",
  "version": "1.0.0",
  "description": "Advanced node API",
  "main": "index.js",
  "scripts": {
    "build": "npx rimraf dist && npx tsc -p tsconfig-build.json",
    "start": "node dist/main/server.js",
    "dev": "tsnd --inspect --transpile-only --ignore-watch node_modules --respawn src/main/server.ts",
    "lint": "npx eslint ./**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:staged": "npm t -- --findRelatedTests",
    "test:watch": "npm t -- --watch",
    "test:coverage": "npm t -- --coverage",
    "test:fb-api": "npm t -- -c ./jest.integration.config.js tests/external/facebook-api.test.ts",
    "prepare": "npx husky install"
  },
  "keywords": [
    "node",
    "advanced"
  ],
  "author": "Marcos Vinicius Corsi",
  "license": "ISC",
  "devDependencies": {
    "@jest-mock/express": "^1.4.3",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.3.3",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-import-helpers": "^1.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-mock-extended": "^1.0.18",
    "lint-staged": "^11.0.1",
    "pg-mem": "1.9.11",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.29",
    "uuid": "^8.3.2"
  }
}
